<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="440dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/pop_border"
    android:gravity="center"
    android:paddingTop="20dp"
    android:paddingBottom="20dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/choose_card_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="卡片"
        android:textAlignment="center"
        android:textColor="#81511C"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/original_action"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:drawablePadding="8dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/choose_card_tips"
        tools:srcCompat="@drawable/ic_arrow_upward_black_24dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/click_to_modify"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@id/original_action"
        app:layout_constraintStart_toStartOf="@id/original_action"
        app:layout_constraintTop_toBottomOf="@id/original_action"
        tools:ignore="SmallSp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/insert_left"
        android:layout_width="64dp"
        android:layout_height="0dp"
        android:layout_marginEnd="24dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@id/original_action"
        app:layout_constraintEnd_toStartOf="@id/original_action"
        app:layout_constraintTop_toTopOf="@id/original_action"
        app:srcCompat="@drawable/ic_left_add" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/insert_right"
        android:layout_width="64dp"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@id/original_action"
        app:layout_constraintStart_toEndOf="@id/original_action"
        app:layout_constraintTop_toTopOf="@id/original_action"
        app:srcCompat="@drawable/ic_right_add" />

</androidx.constraintlayout.widget.ConstraintLayout>